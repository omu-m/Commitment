<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-2 offset-md-1 mt-4">
      <div style="text-align:center;">
        <h5 class="text-center"><strong>会員一覧</strong></h5>
        <hr class="col-md-8 mt-2">
      </div>
    </div>
    <div class="col-md-10 offset-md-1">
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>表示名</th>
            <th>ユーザーネーム</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <% @members.each do |member| %>
          <tbody>
            <tr>
              <td><%= member.id %></td>
              <td>
                <%= image_tag member.get_profile_image, size: "50x50", style: "border-radius: 50px;" %>
                <%= link_to member.display_name, admin_member_path(member.id) %>
              </td>
              <td><%= member.user_name %></td>
              <% if member.is_deleted == true %>
                <td class="text-secondary font-weight-bold">退会</td>
              <% else %>
                <td class="text-primary font-weight-bold">有効</td>
              <% end %>
            </tr>
          </tbody>
        <% end %>
      </table>
      <div class="text-center">
        <div class="mx-auto" style="width: 100px;">
          <%= paginate @members %>
        </div>
      </div>
    </div>
  </div>
</div>