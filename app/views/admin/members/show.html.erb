<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3 offset-md-1 mt-4">
      <table class="table table-hover table-inverse" style="text-align:center;">
        <thead>
          <tr>
            <th><%= @member.display_name %>さんの会員詳細</th>
          </tr>
        </thead>
      </table>
    </div>
    <div class="col-md-10 offset-md-1">
      <table class="table table-bordered">
        <tr>
          <th class="table-active">会員ID</th><td><%= @member.id %></td>
        </tr>
        <tr>
          <th class="table-active">プロフィール画像</th><td><%= image_tag @member.get_profile_image, size: "80x80", style: "border-radius: 50px;" %></td>
        </tr>
        <tr>
          <th class="table-active">表示名</th><td><%= @member.display_name %></td>
        </tr>
        <tr>
          <th class="table-active">ユーザーネーム</th><td><%= @member.user_name %></td>
        </tr>
        <tr>
          <th class="table-active">メールアドレス</th><td><%= @member.email %></td>
        </tr>
        <tr>
          <th class="table-active">会員ステータス</th>
          <% if @member.is_deleted == true %>
            <td class="text-secondary font-weight-bold">退会</td>
          <% else %>
            <td class="text-primary font-weight-bold">有効</td>
          <% end %>
        </tr>
      </table>

      <div class="actions text-center mb-4 mt-5">
        <%= link_to "編集", edit_admin_member_path(@member), class: "btn btn-outline-primary px-4" %>
      </div>
    </div>
  </div>
</div>