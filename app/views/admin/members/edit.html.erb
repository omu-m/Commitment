<div class="container">
  <div class="row">
    <div class="col-5 px-0 mx-auto">
      <div class="mb-4　mt-5">
        <h4><strong><%= @member.display_name %>さんの会員情報編集</strong></h4>
      </div>

      <%= form_with model: @member, url: admin_member_path(@member.id), method: :patch, local:true do |f| %>

        <table class="table table-bordered">
          <tr>
            <th class="table-active">会員ID</th><td><%= @member.id %></td>
          </tr>
          <tr>
            <th class="table-active">プロフィール画像</th><td><%= image_tag @member.get_profile_image, size: "80x80" %></td>
          </tr>
          </tr>
        </table>
        <div class="field mb-4 mt-5">
          <%= f.label :display_name, "表示名" %>
          <%= f.text_field :display_name, autofocus: true, autocomplete: "display_name", class: "form-control" %>
        </div>
        <div class="field mb-4">
          <%= f.label :user_name, "ユーザーネーム" %>
            <br><span class="text">※『半角英数字(a-z/0-9)』のみ使用できます。</span></td>
          <%= f.text_field :user_name, autocomplete: "user_name", class: "form-control" %>
        </div>
        <div class="field mb-4">
          <%= f.label :email, "メールアドレス" %>
          <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
        </div>
        <div class="field text-white mb-4">
          <pre>
          <%= f.radio_button :is_deleted, false, checked: true %>有効　　　　　　　　　　　　　　　<%= f.radio_button :is_deleted, true%>退会
          </pre>
        </div>
        <div class="text-center">
          <%= f.submit "変更を保存", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>