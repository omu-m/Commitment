<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3 offset-md-1 mt-4">
      <div style="text-align:center;">
        <h5 class="text-center"><strong>サブタスク詳細／コメント</strong></h5>
        <hr class="col-md-10 mt-2">
      </div>
    </div>
    <div class="col-md-10 offset-md-1">
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>
              <%= image_tag @subtask.member.get_profile_image, size: "50x50", style: "border-radius: 50px;" %>
              <%= @subtask.member.display_name %>
            </th>
            <th class="text-danger font-weight-bold">
              <%= @subtask.progress_status_i18n %>
            </th>
          </tr>
        </thead>
      </table>
      <table class="mt-5", align="center" border="1" width="750">
        <tr>
          <th class="table-active text-center", width="20%">サブタスク</th>
          <td class="text-left", valign="top", style="display: block; overflow-y:scroll; height:200px; word-break: break-all;">
            <%= safe_join(@subtask.subtask_content.split("\n"),tag(:br)) %>
          </td>
        </tr>
        </tr>
      </table>
    　<div class="comments-area">
      　<%= render "admin/comments/index", subtask: @subtask, comments: @comments %>
      </div>
    </div>
  </div>
</div>