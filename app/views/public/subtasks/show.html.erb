<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-10 offset-md-1 my-4 mt-5">
  		<table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>
              <%= image_tag @subtask.member.get_profile_image, size: "50x50" %>
              <%= @subtask.member.display_name %>
            </th>
            <th></th>
            <th></th>
            <th>進捗
              <%= form_with model: [@subtask.task, @subtask], local: true do |f| %>
              	<%= f.select :progress_status, Subtask.progress_statuses.keys %>
                  <% if @subtask.member_id == current_member.id %>
              	    <%= f.submit "更新", class: "btn btn-outline-danger" %>
              	  <% end %>
          	  <% end %>
            </th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @subtask.subtask_content %></td>
            <td></td>
          </tr>
      </table>
      <!--comments非同期-->
      <div class="form-group">
        <%= render "public/comments/form", subtask: @subtask, comment: @comment %>
      </div>
      <div id="comments-area">
        <%= render "public/comments/index", subtask: @subtask, comments: @comments %>
      </div>
    </div>
  </div>
</div>
