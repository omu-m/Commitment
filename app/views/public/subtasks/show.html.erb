<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2 class="mt-3">コメント投稿</h2>
    </div>

    <div class='col-md-8 offset-md-1'>
  		<h2>子タスク詳細</h2>
  		<table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th></th>
            <th>内容</th>
            <th></th>
            <th colspan="4"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @subtask.member.display_name %></td>
            <td><%= @subtask.subtask_content %></td>
          <td>
	      	<%= form_with model: [@subtask.task, @subtask], local: true do |f| %>
          	<%= f.select :progress_status, Subtask.progress_statuses.keys %>
              <% if @subtask.member_id == current_member.id %>
          	    <%= f.submit "更新", class: "btn btn-success" %>
          	   <% end %>
      	  <% end %>
        </td>
      </table>
    </div>
  </div>
</div>
