<%= form_with url: task_subtask_search_path(task, 1), method: :get, local: true do |f| %>
  <div class="form-group">
    <i class="fa-solid fa-magnifying-glass"></i>
    <%= f.text_field :keyword, value: keyword, placeholder: "キーワード", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "検索", class: "btn btn-warning text-white btn-block" %>
  </div>
<% end %>
