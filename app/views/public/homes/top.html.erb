          <%= link_to "もっと詳しく", about_path, class: "btn btn-outline-danger btn-sm btn-block mb-4 About" %>
        </div>
        <div class="row">
          <%= link_to 'ゲストログイン（閲覧用）', members_guest_sign_in_path, class: "btn btn-outline-secondary btn-sm btn-block mb-4 sign_in", method: :post %>
        </div>
        <div class="row">
          <%= link_to "ログイン", new_member_session_path, class: "btn btn-outline-primary btn-sm btn-block mb-4 sign_in" %>
        </div>
        <div class="row">
          <%= link_to "新規登録", new_member_registration_path, class: "btn btn-outline-success btn-sm btn-block sign_up" %>
        </div>
      </div>
    </div>
  </div>
</div>