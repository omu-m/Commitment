<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-10 offset-md-1 my-4 mt-5">
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th style="text-align:right;">
              <% unless current_member.email == "guest@example.com" %>
              <%= link_to "編集する" , edit_information_path, class: "btn btn-outline-primary" %>
              <% end %>
            </th>
          </tr>
        </thead>
      </table>
      <table class="table table-bordered my-4">
        <tr>
          <th class="table-active">プロフィール画像</th><td><%= image_tag @member.get_profile_image, size: "80x80", style: "border-radius: 50px;" %></td>
        </tr>
        <tr>
          <th class="table-active">表示名</th><td><%= @member.display_name %></td>
        </tr>
        <% unless current_member.email == "guest@example.com" %>
        <tr>
          <th class="table-active">ユーザーネーム</th><td><%= @member.user_name %></td>
        </tr>
        <tr>
          <th class="table-active">メールアドレス</th><td><%= @member.email %></td>
        </tr>
        <% end %>
      </table>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>
              <% unless current_member.email == "guest@example.com" %>
                <%= link_to "参加タスク",  tasks_path(member_id: @member.id), class: "btn btn-primary" %>
              <% end %>
            </th>
            <th>
              <% unless current_member.email == "guest@example.com" %>
                <%= link_to "お気に入りタスク",  task_favorites_path(@member), class: "btn btn-primary" %>
              <% end %>
            </th>
            <th>
              <% unless current_member.email == "guest@example.com" %>
                <%#= link_to "いいねサブタスク",  subtask_favorites_path(@member), class: "btn btn-primary" %>
              <% end %>
            </th>
          </tr>
        </thead>
      </table>
    </div>
  </div>
</div>