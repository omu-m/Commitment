<h2 class="mt-4">コメント一覧 <%= subtask.comments.count %>件</h2>
<hr>
<!--コメントが3件以上の場合、残りのコメントをプルダウンで表示するボタンの作成-->
<% if comments.length  > 3 %>
  <% comments.where(parent_id: nil).each_with_index  do |comment, index| %>
    <%if index + 1 < 4 %>
      <%= render "public/comments/hide_comments", comment: comment %>
    <%else %>
      <div class="collapse" id="collapseExample">
        <div class="card card-body">
          <%= render "public/comments/hide_comments", comment: comment %>
        </div>
      </div>
    <%end%>
  <% end %>
    <div class="text-center">
      <button type="button" class="btn btn-primary" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
        もっと見る
      </button>
    </div>
  <%else%>
  <% comments.where(parent_id: nil).each do |comment| %>
    <%= render "public/comments/hide_comments", comment: comment %>
  <% end %>
<%end%>


