<%= form_with  url: task_subtask_comments_path(@subtask.task, @subtask), method: :post, local: false do |f| %>
  <!--エラーメッセージ-->
  <!--<= render 'layouts/error_messages', model: f.object %>-->
  <div class="form-group">
    <%= f.label :コメントに返信する %>
    <%= f.text_area :comment, :size => "3x3", placeholder: "返信コメントを入力してください", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.hidden_field :parent_id, value: comment.id %>
  </div>
  <div class="text-right">
    <%= f.submit "返信する", class: "btn btn-warning text-white" %>
  </div>
<% end %>