<div class='container'>
  <div class='row'>
    <div class='col-md-3'>

      <h2 class="mt-3">New task</h2>
      <%= render 'form', task: @tasks %>
    </div>

    <div class='col-md-8 offset-md-1'>
  		<h2>Task detail</h2>
  		<table class='table'>
  		  <tr>
  		    <td>
  		      <% if @task.image.attached? %>
              <%= image_tag @task.image, size: "50x50" %>
            <% else %>
              <%= image_tag 'no_image', size: "50x50" %>
            <% end %>
          </td>
  		    <td><%= @task.task_title %></td>
          <td><%= @task.task_content %></td>
          <td><%= link_to "子タスク一覧", subtasks_path, class: "btn btn-sm btn-success" %></td>
          <td>
            <% if @task.owner_id == current_member.id %>
              <%= link_to "編集", edit_task_path(@task), class: "btn btn-sm btn-danger" %>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>