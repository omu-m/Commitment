<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-10 offset-md-1 my-4 mt-5">
  		<table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>
              <% if @task.image.attached? %>
                <%= image_tag @task.image, size: "50x50" %>
              <% else %>
                <%= image_tag "no_image", size: "50x50" %>
              <% end %>
            </th>
            <th>
              <% unless current_member.email == "guest@example.com" %>
              <!--タスク(グループ)に参加していると子タスク一覧が表示されるようになる仕様。-->
              <a class="btn btn-outline-secondary" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
                メンバー
              </a>
              <% end %>
              <% memberids = [] %>
              <% @task.members.each do |member| %>
              <div class="collapse" id="collapseExample">
                <div class="card card-body">
                  <% memberids.push(member.id) %>
                  <%= image_tag member.get_profile_image, size: "50x50" %>
                  <%= member.display_name %>
                </div>
              </div>
              <% end %>
            </th>
            <th>
              <% if memberids.include?(current_member.id) %>
                <%= link_to "子タスク一覧", task_subtasks_path(@task), class: "btn btn-outline-secondary" %>
              <% end %>
            </th>
            <% unless current_member.email == "guest@example.com" %>
            <th>
              <% if @task.owner_id == current_member.id %>
              <%= link_to "編集", edit_task_path(@task), class: "btn btn-outline-danger" %>
            <% elsif @task.members.include?(current_member) %>
              <%= link_to "退出", task_out_path(@task), method: :delete, class: "btn btn-outline-danger" %>
            <% else %>
              <%= link_to "参加", task_join_path(@task), class: "btn btn-outline-success" %>
            <% end %>
            </th>
            <% end %>
          </tr>
        </thead>
      </table>
      <table class="table table-bordered">
        <tr>
          <th class="table-active">タスク</th><td><%= @task.task_title %></td>
        </tr>
        <tr>
          <th class="table-active">内容</th><td><%= @task.task_content %></td>
        </tr>
        </tr>
      </table>
    </div>
  </div>
</div>